<h1>Welcome to SoftUni Wiki!</h1>
<section>
    <h2>All available books</h2>
    <div class="spacer">
        <ul>
            {{#each books}}
                <li>

                    <img src="{{image}}" alt="Book image">
                    <div>
                        <h3>Title: <a href="/book/details/{{_id}}">{{title}}</a></h3>
                        <h3>Genre: {{genre}}</h3>
                        <h3>Author: {{author}}</h3>
                        <h3>Publisher: {{publisher}}</h3>
                    </div>
                </li>
                {{else}}
                <h3>No books in database!</h3>
            {{/each}}
        </ul>
    </div>
</section>