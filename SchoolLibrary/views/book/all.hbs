<h1>Welcome to SoftUni Wiki!</h1>
<section>
    <h2>All articles</h2>
    <div class="spacer">
        <ul>
            {{#each books}}
                <li>
                    <a href="/book/details/{{_id}}">{{title}}</a>
                    <img src="{{image}}" alt="Book image">
                    <div>
                        <h3>{{genre}}</h3>
                        <h3>{{author}}</h3>
                    </div>
                </li>
                {{else}}
                <h3>No books in database!</h3>
            {{/each}}
        </ul>
    </div>
</section>