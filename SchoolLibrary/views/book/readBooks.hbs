<section>
    <h2>Read books</h2>
    <div class="spacer">
        {{#each books}}
            <article class="book">
                <figure>
                    <img src="data:{{image.contentType}};base64,{{image.data}}" alt="">
                </figure>
                <div class="book-info">
                    <h3>Title: <a href="/book/details/{{_id}}">{{title}}</a></h3>
                    <h3>Author: {{author}}</h3>
                    <h3>Genre: {{genre}}</h3>
                    <h3>Publisher: {{publisher}}</h3>
                </div>
                <div class="button-container">
                    <a href="/user/remove/book/read/{{_id}}" class="button green">Remove</a>
                </div>
            </article>
        {{/each}}
    </div>
</section>